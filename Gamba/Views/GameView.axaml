<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:slot="clr-namespace:Gamba.Views.Controls.Slot"
             xmlns:viewModels="clr-namespace:Gamba.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Gamba.Views.GameView"
             x:DataType="viewModels:GameViewModel">
    <StackPanel>
        <StackPanel>
            <TextBlock Text="{Binding Level, StringFormat=Level: {0}}"/>
            <TextBlock Text="{Binding Score, StringFormat=Score: {0}}"/>
        </StackPanel>
        <WrapPanel>
            <Grid
                ColumnDefinitions="*,*,*"
                RowDefinitions="*,*,*"
                Width="200"
                Height="200"
                HorizontalAlignment="Left">
                <slot:Slot Grid.Column="0" Grid.Row="0" Symbol="{Binding NextSymbols[0]}" />
                <slot:Slot Grid.Column="0" Grid.Row="1" Symbol="{Binding NextSymbols[1]}"/>
                <slot:Slot Grid.Column="0" Grid.Row="2" Symbol="{Binding NextSymbols[2]}"/>
                <slot:Slot Grid.Column="1" Grid.Row="0" Symbol="{Binding CurrentSymbols[0]}"/>
                <slot:Slot Grid.Column="1" Grid.Row="1" Symbol="{Binding CurrentSymbols[1]}"/>
                <slot:Slot Grid.Column="1" Grid.Row="2" Symbol="{Binding CurrentSymbols[2]}"/>
                <slot:Slot Grid.Column="2" Grid.Row="0" Symbol="{Binding PrevSymbols[0]}"/>
                <slot:Slot Grid.Column="2" Grid.Row="1" Symbol="{Binding PrevSymbols[1]}"/>
                <slot:Slot Grid.Column="2" Grid.Row="2" Symbol="{Binding PrevSymbols[2]}"/>
            </Grid>
            <Button
                Command="{Binding RollCommand}"
                HorizontalAlignment="Right">
                Gamba
            </Button>
        </WrapPanel>
    </StackPanel>
</UserControl>