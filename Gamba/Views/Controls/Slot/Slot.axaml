<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:slot="clr-namespace:Gamba.Views.Controls.Slot"
             xmlns:converters="clr-namespace:Gamba.Views.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Gamba.Views.Controls.Slot.Slot">
    <UserControl.Resources>
        <converters:SlotSymbolToStringConverter x:Key="SlotSymbolToStringConverter" />
    </UserControl.Resources>
    <TextBlock
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontFamily="Noto Color Emoji, Segoe UI Emoji"
        FontSize="30"
        Background="Transparent"
        ClipToBounds="False"
        Text="{Binding Symbol, 
        RelativeSource={RelativeSource AncestorType=slot:Slot}, 
        Converter={StaticResource SlotSymbolToStringConverter}}">
    </TextBlock>
</UserControl>