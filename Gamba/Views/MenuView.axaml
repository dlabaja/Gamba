<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Gamba.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Gamba.Views.MenuView"
             x:DataType="viewModels:MenuViewModel">
    <StackPanel>
        <Button
            Command="{Binding PlayGameCommand}"
            Content="Play" />
        <Button
            Command="{Binding OpenStatsCommand}"
            Content="Stats" />
        <Button
            Command="{Binding ExitGameCommand}"
            Content="Exit" />
    </StackPanel>
</UserControl>