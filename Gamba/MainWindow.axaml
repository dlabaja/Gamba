<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:slot="clr-namespace:Gamba.Controls.Slot"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Gamba.MainWindow"
        Title="Gamba">
    <Grid>
        <WrapPanel>
            <Grid
                ColumnDefinitions="*,*,*"
                RowDefinitions="*,*,*"
                Width="200"
                Height="200"
                HorizontalAlignment="Left">
                <slot:Slot Grid.Column="0" Grid.Row="0" Symbol="DIAMOND" />
                <slot:Slot Grid.Column="0" Grid.Row="1" />
                <slot:Slot Grid.Column="0" Grid.Row="2" />
                <slot:Slot Grid.Column="1" Grid.Row="0" />
                <slot:Slot Grid.Column="1" Grid.Row="1" />
                <slot:Slot Grid.Column="1" Grid.Row="2" />
                <slot:Slot Grid.Column="2" Grid.Row="0" />
                <slot:Slot Grid.Column="2" Grid.Row="1" />
                <slot:Slot Grid.Column="2" Grid.Row="2" />
            </Grid>
            <Button HorizontalAlignment="Right">Gamba</Button>
        </WrapPanel>
    </Grid>
</Window>